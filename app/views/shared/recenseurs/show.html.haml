- title = "Recenseur #{@recenseur.nom}"
- content_for(:head_title) { title }

%main#contenu.fr-container.fr-pt-2w.fr-pb-4w
  = render "shared/breadcrumbs", links: [["Recenseurs", [namespace, :recenseurs]]], current_page_label: title

  .fr-grid-row.fr-grid-row--gutters
    .fr-col-12.fr-col-md-6
      %h1
        = icon_span("account-pin-circle", fill: true)
        = title

      %p
        %b Nom :
        = @recenseur.nom
      %p
        %b Email :
        = link_to @recenseur.email, "mailto:#{@recenseur.email}", target: :_blank, class: "fr-btn fr-btn--sm fr-btn--secondary fr-btn--icon-left fr-icon-mail-line"

      %p
        %b Statut :
        = @recenseur.human_status

      = simple_format @recenseur.notes

    .fr-col-12.fr-col-md-6
      %ul.fr-btns-group.fr-btns-group--inline-lg.fr-btns-group--icon-left.fr-mt-1w
        %li= link_to "Modifier", [:edit, namespace, @recenseur], class: "fr-btn fr-icon-pencil-line" unless current_conservateur && !policy(@recenseur).edit?
        %li= button_to "Incarner", [:impersonate, namespace, @recenseur], method: :post, class: "fr-btn fr-btn--sm fr-btn--secondary fr-btn--icon-left fr-icon-eye-line w-100" unless current_conservateur
        %li= button_to "Supprimer", [namespace, @recenseur], class: "fr-btn fr-icon-delete-line fr-btn--secondary", method: :delete, data: { turbo_confirm: "Êtes-vous sûr ?" } unless current_conservateur && !policy(@recenseur).destroy?

  .fr-grid-row.fr-grid-row--gutters
    .fr-col-12.fr-col-lg-6
      %h2 Communes
      = render "shared/recenseurs/accesses", accesses: @accesses, other_accesses: @other_accesses

    .fr-col-12.fr-col-lg-6
      %h2 Nouvel accès
      = render "shared/recenseur_accesses/form", recenseur: @recenseur
