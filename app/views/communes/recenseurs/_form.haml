- recenseur ||= @commune.recenseurs.new
= turbo_frame_tag :form do
  = form_for recenseur, url: commune_recenseurs_path, method: :post, builder: FormBuilderDsfr do |f|
    .fr-input-group
      = f.label :email do
        Email (*)
      = f.text_field :email, required: true
    .fr-input-group
      = f.label :nom
      = f.text_field :nom
    .fr-input-group
      = f.label :notes do
        = Recenseur.human_attribute_name(:notes)
        %span.fr-hint-text= Recenseur.human_attribute_name(:notes_hint)
      = f.text_area :notes
    = f.button "Demander l'accès", type: :submit, name: nil, data: { turbo_disable_with: "Demande d'accès en cours…" }
