- title = "Recenseur #{@recenseur.nom}"
- content_for(:head_title) { title }

%main#contenu.fr-container.fr-pt-2w.fr-pb-4w
  = render "shared/breadcrumbs", links: [["Recenseurs", [@commune, :recenseurs]]], current_page_label: title

  .fr-grid-row.fr-grid-row--gutters
    .fr-col-12.fr-col-lg-8
      %h1
        = icon_span("account-pin-circle", fill: true)
        = title

      %p
        %b Nom :
        = @recenseur.nom
      %p
        %b Email :
        = link_to @recenseur.email, "mailto:#{@recenseur.email}", target: :_blank, class: "fr-btn fr-btn--sm fr-btn--secondary fr-btn--icon-left fr-icon-mail-line"

      = simple_format @recenseur.notes

      - if @access.pending?
        = @access.human_status
      - else
        = render "access", access: @access

    .fr-col-12.fr-col-lg-4
      %ul.fr-btns-group.fr-btns-group--right.fr-btns-group--inline-lg.fr-btns-group--icon-left.fr-mt-1w
        %li= button_to "Révoquer l'accès", [@commune, @access.recenseur, @access], method: :delete, data: { turbo_confirm: "Êtes-vous sûr ?" }, class: "fr-btn fr-btn--secondary fr-btn--icon-left fr-icon-delete-line"
