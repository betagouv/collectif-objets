  <% c.with_text do %>
    <%= t(".hint", count: dossier.recensements.count) %>
  <% end %>
  <% c.with_cta do %>
    <% completion_path = current_recenseur ? new_recenseurs_commune_completion_path(commune) : new_commune_completion_path(commune) %>
