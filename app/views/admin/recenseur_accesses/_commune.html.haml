%li{ id: dom_id(commune) }
  .co-flex.co-flex--space-between.co-flex--align-items-center
    = "#{commune.nom} (#{commune.departement})"
    - if recenseur.accesses.any? { _1.commune == commune }
      %button.fr-btn.fr-btn-sm.fr-btn--secondary.fr-btn--icon-left.fr-icon-check-line{disabled: true} Accès ajouté
    - else
      = button_to("Ajouter l'accès",
        [:admin, recenseur, :recenseur_access_index],
        class: "fr-btn fr-btn-sm fr-btn--secondary fr-btn--icon-left fr-icon-add-line",
        params: { commune_id: commune.id },
        title: "Ajouter l'accès à #{commune.nom} (#{commune.departement.nom})",
        data: { turbo_submits_with: "Ajout en cours…" })
