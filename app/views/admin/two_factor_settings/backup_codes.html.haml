- content_for(:head_title) { "Codes de secours d'authentification à deux facteurs" }

%main#contenu.fr-container.fr-pt-2w.fr-pb-4w{ data: { controller: "download-text", download_text_filename_value: "collectif-objets-backup-codes.txt" } }
  = render("shared/breadcrumbs", links: [["Administration", admin_path], ["Admins", admin_admin_users_path], [current_admin_user.to_s, admin_admin_user_path(current_admin_user)], ["Authentification à deux facteurs", admin_two_factor_settings_path]], current_page_label: "Codes de secours")

  %h1 Codes de secours

  .fr-grid-row
    .fr-col-md-8
      .fr-alert.fr-alert--warning.fr-mb-4w.co-print-hide
        %h2.fr-alert__title
          %strong Important : sauvegardez ces codes de secours
        %p
          Chaque code ne peut être utilisé qu'une seule fois. Conservez-les en lieu sûr.
          %br
          %strong Ces codes ne seront plus jamais affichés après avoir quitté cette page.

      .fr-mb-4w
        %h2.fr-h5 Vos codes de secours
        %textarea.fr-input{ readonly: true, rows: 20, data: { download_text_target: "content" } }
          :plain
            Collectif Objets
            Codes de secours pour l'authentification à deux facteurs
            Compte : #{current_admin_user}
            Générés le : #{Time.current.strftime('%d/%m/%Y à %H:%M')}

            #{@backup_codes.join("\n")}

            Chaque code ne peut être utilisé qu'une seule fois.
            Conservez-les en lieu sûr.

      .fr-btns-group.fr-btns-group--inline-md.fr-btns-group--icon-left.co-print-hide
        %button.fr-btn.fr-btn--secondary.fr-icon-file-download-line{ type: :button, data: { action: "download-text#download" } }
          Télécharger
        %button.fr-btn.fr-btn--secondary.fr-icon-printer-line{ type: :button, data: { controller: "print", action: "print#print" } }
          Imprimer
        = link_to "Continuer", admin_admin_user_path(current_admin_user), class: "fr-btn"
