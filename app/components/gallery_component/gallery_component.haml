%div(data-controller="gallery-component" class="co-gallery co-gallery--#{template} fr-mb-4w" data-gallery-component-target="photos" data-images-json=json_data)
  - if template == :full
    %p.co-text--bold
      = title
      - if count == 1
        %a.fr-ml-2w(href="#" data-action="gallery-component#show") Agrandir
      - elsif count > 1
        %a.fr-ml-2w(href="#" data-action="gallery-component#show") Voir la galerie

    .co-first
      = link_to( |
        first_photo.url, |
        "data-action": "gallery-component#show", |
        "data-index": "1", |
        class: "co-gallery--photo co-cursor--zoom-in", |
      ) do |
        = vite_or_raw_image_tag first_photo.thumb_url, alt: first_photo.alt
        %span.fr-icon-zoom-in-line.co-gallery-magnifier-icon(aria-hidden="true")

    - if count > 1
      .co-thumbs
        - photos.from(1).to(thumbs_count).each_with_index do |photo, index|
          .co-gallery-thumb
            = link_to( |
              photo.url, |
              "data-action": "gallery-component#show", |
              "data-index": index + 2, |
              class: "co-gallery--photo co-cursor--zoom-in" |
            ) do |
              = vite_or_raw_image_tag photo.thumb_url, alt: photo.alt

        - if display_gallery_link?
          .co-gallery-others
            %a.co-gallery--photo.co-flex.co-flex--align-items-center(href="#" data-action="gallery-component#show" data-index=last_thumb_open_index)
              %span.co-flex--grow
                = t(".last_thumb", count: hidden_photos_count)

  - elsif template == :small
    %p.co-text--bold
      = title
      - if count.zero?
        %span.fr-icon-image-line(aria-hidden="true")
    - if count > 0
      .fr-my-2w
        = link_to( |
          first_photo.url, |
          "data-action": "gallery-component#show", |
          "data-index": "1", |
          class: "co-gallery--photo co-cursor--zoom-in" |
        ) do |
          = vite_or_raw_image_tag first_photo.thumb_url, alt: first_photo.alt
    - if display_gallery_link? && count > 1
      %a.fr-link.fr-link--icon-right.fr-icon-zoom-in-line(href="#"  data-action="gallery-component#show")
        Voir la galerie de #{count} photos

- if display_description? && first_description
  %p.co-text--italic.fr-text--sm.fr-mt-2w
    = first_description

- if display_credits? && credits.any?
  .co-text--muted.fr-mt-1w.fr-text--sm
    - credits.each do |credit|
      %div= credit
